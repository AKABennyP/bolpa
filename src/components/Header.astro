<header class="header z-50">
    <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
        <div class="flex lg:flex-1">
            <a href="#" class="-m-1.5 p-1.5">
                <img class="logo h-auto w-8" src="/logo.png" alt=""/>
            </a>
        </div>
        <div class="tracking-tighter"><h1>BREATH <i>of</i> <span>LIFE</span></h1></div>
        <div class="flex">
            <button type="button" id="hamburger" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
                <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                </svg>
            </button>
        </div>
        <!-- Mobile menu, show/hide based on menu open state. -->
        <div class="hidden flyout absolute w-100 top-0 right-0" role="dialog" aria-modal="true">
            <!-- Background backdrop, show/hide based on slide-over state. -->
            <div class="fixed inset-0 z-10"></div>
            <div class="flyout-content fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
                <div class="flex items-center justify-between">
                    <a href="#" class="-m-1.5 p-1.5">
                    <img class="h-10 w-auto" src="/logo.png" alt="">
                    </a>
                    <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700">
                    <span class="sr-only">Close menu</span>
                    <svg class="close h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                    </button>
                </div>
                <div class="mt-6 flow-root">
                    <div class="-my-6 divide-y divide-gray-500/10">
                    <div class="space-y-2 py-6">
                        <a href="#misson" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Misson</a>
                        <a href="#staff" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Staff</a>
                        <a href="#believe" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">What we Believe</a>
                        <a href="#contact" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Contact</a>
                    </div>
                    <div class="py-6">
                        <a href="https://bolpa.churchcenter.com/giving" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Give</a>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>

<style>
    header {
        position: fixed;
        width: 100%;
        background-image: linear-gradient(to bottom, rgb(2 2 26), rgba(255,0,0,0));
    }

    h1 {
        font-size: 50px;
        color: #7cd7fd;
        font-family: "Roboto", sans-serif;
        font-weight: 200;
        font-style: normal;
        font-size: 35px;
        word-spacing: -10px;
    }

    h1 i {
        font-family: "Parisienne", cursive;
        font-weight: 400;
        font-style: normal;
        font-size: 30px;
        color: #fff;
        z-index: 2;
        position: relative;
    }

    h1 span {
        font-family: "Roboto", sans-serif;
        font-weight: 900;
        font-style: normal;
        z-index: 1;
        position: relative;
    }

    .flyout {
        display: flex;
        justify-content: flex-end;
        align-items: flex-end;
        width: 100%;
        height: 100vh;
    }

    .flyout.hidden {
        display: none;
    }

    .flyout-content {
        height: 100vh;
    }

    svg {
        color: #7cd7fd;
    }
</style>

<script>
    console.log('Welcome, browser console!');
    document.querySelector('#hamburger')?.addEventListener('click', (e: any) => {
        document.querySelector('.flyout')?.classList.remove("hidden");
    });

    function closeNav() {
        document.querySelector('.flyout')?.classList.add("hidden");
    }

    document.querySelector('.close')?.addEventListener('click', () => closeNav());
    let links = document.querySelectorAll(".flyout a");
    links.forEach(link => {
        link.addEventListener('click', () => closeNav());
    });
    document.querySelector('.flyout')?.addEventListener('click', (e: any) => {
        if(!e.target.closest('.flyout-content')) {
            closeNav();
        }
    });
</script>