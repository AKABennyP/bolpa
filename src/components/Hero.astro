<h2 class="bg-transparent text-3xl px-20 my-20">
    Where 
    <ul class="relative">
        <li class="bg-white text-black col-12 text-right pr-2">Breakout</li>
        <li class="bg-white text-black col-12 text-right pr-2">Payer</li>
        <li class="bg-white text-black col-12 text-right pr-2">Miracles</li>
    </ul>
    Happens
</h2>

<style>
    h2 {
        position: relative;
        width: 100%;
        font-weight: 500;
        overflow: hidden;
        margin-top: 300px;
        margin-bottom: 100px;
    }

    ul {
        width: 100%;
        height: 40px;
    }

    ul li {
        position: absolute;
        width: 100%;
        height: 40px;
    }

    ul li:not(.active) {
        color: #fff;
        z-index: 1;
        transition-delay: 1.2s;
    }
    
    ul li.active {
        z-index: 2;
        transition: z-index 1.2s linear;
    }
</style>

<script>
    var i = 0;
    const listItems = document.querySelectorAll('ul li');
    listItems[i].classList.add('active');
    const switcher = () => {
        setTimeout(() => {
            listItems.forEach((listItem) => {
                listItem.classList.remove('active');
            });
            listItems[i].classList.add('active');
            if(i < listItems.length - 1) {
                i++;
            } else {
                i=0;
            }
            switcher();
        }, 5000);
    }

    switcher();
</script>