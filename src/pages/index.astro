---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import FeaturedService from '../components/FeaturedService.astro';
import Misson from '../components/Misson.astro';
import Staff from '../components/Staff.astro';
import Believe from '../components/Believe.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<div class="bg">
			<div class="container">
				<Header />
				<Hero />
				<FeaturedService />
			</div>
		</div>
		<div class="bg">
			<div class="buffer"></div>
		</div>
		<div class="bg2">
			<div class="container">
				<Misson />
			</div>
		</div>
		<div class="bg">
			<div class="buffer"></div>
		</div>
		<div class="bg3">
			<div class="container">
				<Staff />
			</div>
		</div>
		<div class="bg">
			<div class="buffer"></div>
		</div>
		<div class="bg4">
			<div class="container">
				<Believe />
			</div>
		</div>
	</main>
</Layout>


<style>
	.bg {
		display: flex;
		min-height: 100vh;
		flex-direction: column;
		background-attachment: fixed;
		background-image: url(/StainedGlass.jpeg);
		background-position: center;
		background-size: cover;
		color: var(--color);
	}

	.bg:not(:first-child) {
		min-height: auto;
	}

	.bg:after {
		content: '';
		display: block;
		width: 100vw;
		background: var(--bg-gradient);
	}
	
	.buffer {
		width: 100%;
		height: 200px;
		background: transparent;
	}

	.bg2 {
		position: relative;
		width: 100%;
		display: flex;
		flex-direction: column;
		flex-wrap: wrap;
		background-image: url(/womanPraying.jpg);
		background-position: 45% -200px;
		background-size: cover;
		gap: 1.6em;
		padding-top: 600px;
	}

	.bg3 {
		position: relative;
		width: 100%;
		display: flex;
		flex-direction: column;
		flex-wrap: wrap;
		background-image: url(/pastorStainedGlass.jpeg);
		background-position: 45% 440px;
		background-size: cover;
		gap: 1.6em;
		padding-bottom: 600px;
	}

	.bg4 {
		position: relative;
		width: 100%;
		display: flex;
		flex-direction: column;
		flex-wrap: wrap;
		background-image: url(/bibleBg.jpg);
		background-position: 45% 440px;
		background-size: cover;
		gap: 1.6em;
		padding-bottom: 600px;
	}

	.container {
		display: flex;
		width: 100%;
		margin: 0 auto;
		flex-direction: column;
		align-items: center;
		max-width: 1200px;
	}
</style>